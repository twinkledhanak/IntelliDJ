<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qapanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.tkd.twinkledhanak.intellidj.activities.QAPanel"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:background="#ffffff">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/hide"
                                android:background="#ffffff"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pick Your Question Category!"
                                    android:textSize="18sp"
                                    android:fontFamily="monospace"
                                    android:paddingLeft="22dp"
                                    android:layout_marginTop="20dp"
                                    android:textStyle="bold"
                                    android:id="@+id/category"
                                    android:textColor="#616161"

                                    />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="60dp"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/career"
                                    android:text="Career"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_question"
                                    android:onClick="card1"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/exam"
                                    android:layout_below="@+id/career"

                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_question"
                                    android:text="Exam"
                                    android:onClick="card2"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/general"
                                    android:layout_below="@id/exam"

                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_question"
                                    android:gravity="center"
                                    android:text="General"
                                    android:onClick="card3"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/hidenotice"

                                android:background="#FFFFFF"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Who should receive notice?"
                                    android:textSize="18sp"
                                    android:fontFamily="monospace"
                                    android:paddingLeft="22dp"
                                    android:layout_marginTop="20dp"
                                    android:textStyle="bold"
                                    android:textColor="#616161"

                                    />
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="60dp"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/fe"
                                    android:text="FE"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_notice"
                                    android:onClick="cardFE"/>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/se"
                                    android:layout_below="@+id/fe"

                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_notice"
                                    android:text="SE"
                                    android:onClick="cardSE"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/te"
                                    android:layout_below="@id/se"

                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_notice"
                                    android:gravity="center"
                                    android:text="TE"
                                    android:onClick="cardTE"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/be"
                                    android:layout_below="@+id/te"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_notice"
                                    android:text="BE"
                                    android:onClick="cardBE"/>
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/all"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_below="@+id/be"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/profile_notice"
                                    android:text="Everyone"
                                    android:onClick="cardAll"/>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_below="@+id/te"/>

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="152dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"

                                android:background="#FFFFFF"
                                    android:id="@+id/typingarea">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text=" Type your content below"
                                        android:fontFamily="monospace"
                                        android:textSize="18sp"
                                        android:paddingLeft="30dp"
                                        android:textColor="#616161"
                                        android:layout_marginTop="10dp"
                                        android:id="@+id/content"
                                        android:textStyle="bold"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_below="@+id/content"
                                        android:id="@+id/v1"
                                        android:background="#E0E0E0">

                                    </View>

                                    <EditText
                                        android:layout_width="fill_parent"
                                        android:layout_height="300dp"
                                        android:layout_marginTop="0dp"
                                        android:hint="Start here..."
                                        android:gravity="start"
                                        android:id="@+id/editText"
                                        android:textSize="18sp"
                                        android:layout_below="@+id/v1"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:textStyle="bold"
                                        android:textColor="#616161"
                                        android:fontFamily="monospace"
                                        android:background="@drawable/edit_border"
                                        />

                            </RelativeLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:background="#FFFFFF"
                                android:layout_marginTop="10dp">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_below="@+id/editText"
                                            android:layout_marginTop="8dp"
                                            android:background="@drawable/profile_question"
                                            android:textColor="#ffffff"
                                            android:id="@+id/item_name"

                                            android:paddingLeft="50dp"
                                            android:paddingTop="10dp"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:fontFamily="monospace"
                                            android:text=""/>
                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="55dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_below="@+id/editText"
                                            android:elevation="4dp"
                                            android:background="@drawable/profpic_question"
                                            android:id="@+id/image_border"
                                            android:paddingLeft="2dp"/>
                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="35dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="7dp"
                                            android:layout_below="@+id/editText"
                                            android:background="@mipmap/ic_pblue"
                                            android:elevation="4dp"
                                            android:paddingLeft="2dp"
                                            android:id="@+id/item_image"/>

                            </FrameLayout>

                                        <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/space"
                                            android:background="#FFFFFF"
                                        android:layout_below="@+id/item_name"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                android:background="#FFFFFF">


                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start|bottom"
                                        android:background="@mipmap/ic_cancel"
                                        android:layout_marginStart="50dp"
                                        android:layout_marginLeft="50dp"
                                        android:id="@+id/cancel_content"
                                        android:onClick="CancelQA"
                                        android:layout_below="@+id/space"
                                        />

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="160dp"
                                        android:layout_marginLeft="160dp"
                                        android:background="@mipmap/ic_submit"
                                        android:id="@+id/submit"
                                        android:onClick="submitQA"
                                        android:layout_gravity="bottom|center_vertical"

                                        />

                            </LinearLayout>



             </LinearLayout>

    </ScrollView>



</LinearLayout>

